<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/googleDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="85dp"
            android:layout_gravity="center"
            android:layout_height="85dp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:srcCompat="@drawable/male"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:text="ANKUSH GUPTA"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:id="@+id/tvEmail"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21Y"
                    android:textColor="#A9A9A9"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="AMATEUR"
                    android:textColor="#3956BF"
                    android:textSize="11sp" />

            </LinearLayout>

            <Button
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="EDIT PROFILE"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:id="@+id/btnEdit"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#EDEDDF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#3956BF"/>


        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_user"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="5dp"
        android:background="#E5E5D9" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="#FFFFF0"
        android:orientation="vertical"
        android:id="@+id/nav_drawer">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:text="CREATE MATCH/TOURNAMENT"
            android:background="#0F33B8"
            android:textStyle="bold"
            android:id="@+id/btnCreate"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/color_white"
            android:textSize="12sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/rlExploreMatch"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/nav1"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="EXPLORE MATCHES"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#676760"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagenav2"
                android:layout_centerInParent="true"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/nav2"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerInParent="true"
                android:text="EXPLORE TOURNAMENTS"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#676760"
                android:layout_toRightOf="@+id/imagenav2"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/imagenav3"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/nav3"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="LEADERBOARD"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="#676760"
                android:layout_toRightOf="@+id/imagenav3"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/imagenav4"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/nav4"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="SCORING REQUESTS"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:textColor="#676760"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imagenav4"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/imagenav5"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/nav5"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="OFFERS"
                android:textSize="12sp"
                android:textColor="#676760"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imagenav5"
                android:gravity="center_vertical" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginLeft="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F7F77"
                android:textSize="11sp"
                android:textStyle="bold"
                android:text="Help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F7F77"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="11sp"
                android:text="About"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F7F77"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Payments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7F7F77"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:text="Privacy Policy"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/rlSetting"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagenav6"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/settings"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/title6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Settings"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="#7F7F77"
                android:layout_toRightOf="@+id/imagenav6"
                android:gravity="center_vertical" />

        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
    // end of main

</LinearLayout>